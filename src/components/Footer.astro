<style>
	footer {
		background: var(--bg-header);
		padding: 2rem 0;
		margin-top: auto;
		border-top: 1px solid var(--border-color);
		font-size: 0.9rem;
	}
	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		text-align: center;
	}
	.social-links {
		display: flex;
		gap: 1.5rem;
	}
	.social-links a {
		color: var(--text-muted);
		transition: color 0.2s;
	}
	.social-links a:hover {
		color: var(--text-main);
	}
	.copyright {
		color: var(--text-muted);
	}
	.legal {
		display: flex;
		gap: 1rem;
	}
	.legal a {
		color: var(--text-muted);
		font-size: 0.8rem;
	}
	.legal a:hover {
		color: var(--text-main);
	}
</style>
