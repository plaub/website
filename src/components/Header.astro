---
import ThemeToggle from './ThemeToggle.astro';

const { pathname } = Astro.url;
const isActive = (path: string) => {
	if (path === '/') {
		return pathname === '/';
	}
	return pathname.startsWith(path);
};
---
<header>
	<div class="container">
		<a href="/" class="logo">
			<span class="name">Pierre Laub</span>
			<span class="subtitle">endurance & creativity</span>
		</a>
		<nav>
			<ul>
				<li><a href="/ueber-mich" class={isActive('/ueber-mich') ? 'active' : ''}>Ãœber mich</a></li>
				<li><a href="/projekte" class={isActive('/projekte') ? 'active' : ''}>Projekte</a></li>
				<li><a href="/triathlon-pace-rechner" class={isActive('/triathlon-pace-rechner') ? 'active' : ''}>Pace Rechner</a></li>
				<li><a href="/blog" class={isActive('/blog') ? 'active' : ''}>Blog</a></li>
				<li><a href="/contact" class={isActive('/contact') ? 'active' : ''}>Kontakt</a></li>
				<li class="toggle-wrapper"><ThemeToggle /></li>
			</ul>
		</nav>
	</div>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: var(--bg-header); /* Fallback */
		background: color-mix(in srgb, var(--bg-header), transparent 15%);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		padding: 0.75rem 0;
		border-bottom: 1px solid var(--border-color);
		transition: border-color 0.2s, background-color 0.2s;
	}
	
	.container {
		max-width: 900px; /* Slightly wider for better breathing room */
		margin: 0 auto;
		padding: 0 1.5rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		display: flex;
		flex-direction: column;
		line-height: 1.2;
		text-decoration: none;
		gap: 2px;
	}

	.logo .name {
		font-weight: 800;
		font-size: 1.25rem;
		color: var(--text-main);
		letter-spacing: -0.02em;
	}

	.logo .subtitle {
		font-size: 0.75rem;
		font-weight: 500;
		color: var(--text-muted);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		gap: 0.25rem;
		align-items: center;
	}

	nav a {
		color: var(--text-muted);
		font-weight: 500;
		font-size: 0.9rem;
		padding: 0.5rem 0.75rem;
		border-radius: 8px;
		transition: all 0.2s ease;
		text-decoration: none;
	}

	nav a:hover {
		color: var(--text-main);
		background-color: var(--bg-card-hover);
	}

	nav a.active {
		color: var(--text-main);
		background-color: var(--bg-card);
		font-weight: 600;
	}

	.toggle-wrapper {
		margin-left: 0.5rem;
		padding-left: 0.5rem;
		border-left: 1px solid var(--border-color);
		display: flex;
		align-items: center;
	}
	
	@media (max-width: 768px) {
		.container {
			flex-direction: column;
			gap: 1rem;
		}
		
		nav ul {
			gap: 0.25rem;
			flex-wrap: wrap;
			justify-content: center;
		}

		.toggle-wrapper {
			margin-left: 0;
			padding-left: 0;
			border-left: none;
			margin-top: 0.25rem;
		}
	}
</style>
