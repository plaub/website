---
import ThemeToggle from "./ThemeToggle.astro";

const { pathname } = Astro.url;

const navLinks = [
  { href: "/ueber-mich", label: "Ãœber mich" },
  { href: "/projekte", label: "Projekte" },
  { href: "/triathlon-pace-rechner", label: "Pace Rechner" },
  { href: "/blog", label: "Blog" },
];

const isActive = (path: string) => {
  if (path === "/") {
    return pathname === "/";
  }
  return pathname.startsWith(path);
};
---

<header
  class="sticky top-0 z-50 backdrop-blur-xl bg-[var(--bg-header)]/85 transition-colors duration-200"
>
  <div class="max-w-5xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a
        href="/"
        class="flex flex-col gap-0.5 hover:opacity-80 transition-opacity"
      >
        <span
          class="text-xl font-extrabold text-[var(--text-main)] tracking-tight"
          >Pierre Laub</span
        >
        <span
          class="text-[0.7rem] font-medium text-[var(--text-muted)] uppercase tracking-wider"
          >endurance & creativity</span
        >
      </a>

      <!-- Desktop Navigation -->
      <nav
        class="hidden md:flex items-center gap-1"
        aria-label="Main navigation"
      >
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class={`nav-link ${isActive(link.href) ? "active" : ""}`}
              aria-current={isActive(link.href) ? "page" : undefined}
            >
              {link.label}
            </a>
          ))
        }

        <!-- Theme Toggle Desktop -->
        <div class="ml-3">
          <ThemeToggle />
        </div>
      </nav>

      <!-- Mobile Menu Button & Theme Toggle -->
      <div class="flex md:hidden items-center gap-2">
        <ThemeToggle />

        <button
          id="mobile-menu-button"
          class="p-2 rounded-lg hover:bg-[var(--bg-card-hover)] transition-colors"
          aria-label="Toggle menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg
            class="hamburger w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            class="close hidden w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation Overlay -->
  <nav
    id="mobile-menu"
    class="hidden md:hidden top-full left-0 right-0 backdrop-blur-xl bg-[var(--bg-header)]/85 border-b border-[var(--border-color)] shadow-lg"
    aria-label="Mobile navigation"
  >
    <div class="max-w-5xl mx-auto px-6 py-4 flex flex-col gap-1">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class={`nav-link ${isActive(link.href) ? "active" : ""}`}
            aria-current={isActive(link.href) ? "page" : undefined}
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply px-3 py-2 rounded-lg text-sm font-medium text-[var(--text-muted)] 
           hover:text-[var(--text-main)] hover:bg-[var(--bg-card-hover)] 
           transition-all duration-200 no-underline;
  }

  .nav-link.active {
    @apply text-[var(--text-main)] bg-[var(--bg-card)] font-semibold;
  }

  /* Mobile Menu Animation */
  #mobile-menu {
    max-height: 0;
    overflow: hidden;
    transition:
      max-height 0.3s ease-in-out,
      opacity 0.3s ease-in-out;
    opacity: 0;
  }

  #mobile-menu.menu-open {
    max-height: 500px;
    opacity: 1;
  }
</style>

<script>
  // Mobile Menu Toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const hamburgerIcon = mobileMenuButton?.querySelector(".hamburger");
  const closeIcon = mobileMenuButton?.querySelector(".close");

  const openMenu = () => {
    mobileMenu?.classList.remove("hidden");
    setTimeout(() => {
      mobileMenu?.classList.add("menu-open");
    }, 10);
    hamburgerIcon?.classList.add("hidden");
    closeIcon?.classList.remove("hidden");
    mobileMenuButton?.setAttribute("aria-expanded", "true");
  };

  const closeMenu = () => {
    mobileMenu?.classList.remove("menu-open");
    setTimeout(() => {
      mobileMenu?.classList.add("hidden");
    }, 300);
    hamburgerIcon?.classList.remove("hidden");
    closeIcon?.classList.add("hidden");
    mobileMenuButton?.setAttribute("aria-expanded", "false");
  };

  mobileMenuButton?.addEventListener("click", () => {
    const isOpen = mobileMenu?.classList.contains("menu-open");
    if (isOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  // Close mobile menu when clicking on a link
  mobileMenu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", closeMenu);
  });

  // Close menu on Escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && mobileMenu?.classList.contains("menu-open")) {
      closeMenu();
      mobileMenuButton?.focus();
    }
  });

  // Close menu when clicking outside
  document.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    if (
      mobileMenu?.classList.contains("menu-open") &&
      !mobileMenu?.contains(target) &&
      !mobileMenuButton?.contains(target)
    ) {
      closeMenu();
    }
  });
</script>
